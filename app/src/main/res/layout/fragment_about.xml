<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ui.AboutFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding_default_size"
        android:background="@color/cyan_700"
        >


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/cyan_500"
            android:padding="5dp"
            android:src="@drawable/marifinal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="about this app "
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="458dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="356dp"
            android:layout_height="202dp"
            android:text="Marites is a free, all-in-one messaging app designed by Celso and Densel for android smartphones. It allows you to text, chat, send group texts, send pictures, share videos, send audio messages, and more."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="13dp"
            tools:layout_editor_absoluteY="502dp" />


    </LinearLayout>

</FrameLayout>